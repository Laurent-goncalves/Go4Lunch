<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <include
        layout="@layout/searchable"
        android:layout_gravity="top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:map="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/map"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <!-- BUTTONS MAP VIEW -->
        <Button
            android:id="@+id/map_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:text="@string/map_view"
            android:background="@android:color/white"
            android:drawableTop="@drawable/baseline_map_white_24"/>

        <!-- BUTTONS LIST VIEW -->
        <Button
            android:id="@+id/list_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:text="@string/list_view"
            android:background="@android:color/white"
            android:drawableTop="@drawable/baseline_view_list_white_24"/>

        <!-- BUTTONS WORKMATES -->
        <Button
            android:id="@+id/workmates_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:text="@string/workmates"
            android:background="@android:color/white"
            android:drawableTop="@drawable/baseline_people_white_24"/>

    </LinearLayout>

</FrameLayout>